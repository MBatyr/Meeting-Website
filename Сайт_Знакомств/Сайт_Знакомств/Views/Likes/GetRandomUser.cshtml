@model NotFullUserInfoViewModel

<div>
    <h4>NotFullUserInfoViewModel</h4>
    <hr />
    <p><img src="@Model.Path" style="width:500px; height:500px "></p>

    @Html.DisplayName("ФИО: ")
    @Html.DisplayFor(modelItem => Model.FirstName)
    @Html.DisplayFor(modelItem => Model.LastName)
    <br />

    @Html.DisplayName("О себе: ")
    @Html.DisplayFor(modelItem => Model.Description)
    <br />

    @Html.DisplayName("Возраст: ")
    @Html.DisplayFor(modelItem => Model.Age)
</div>
<div>
    <form method="post">
        <input type="hidden" name="User1Id" value=@Model.User1Id />
        <input type="hidden" name="User2Id" value=@Model.User2Id />
        <input type="submit" value="Отправить" />
    </form>
    @Html.ActionLink("Пропустить", "GetRandomUser", "Likes",new { id = Model.User1Id, idUserSkip = Model.User2Id })
</div>
