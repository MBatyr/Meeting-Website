@model FullUserInfoViewModel
<h1>Info</h1>

<div class="col">
    <form method="post" action="DeleteYourLike" >
        <p><img src="@Model.Path"  style="width:200px; height:200px " class="rounded-circle"></p>
        @Html.DisplayName("ФИО: ")
        @Html.DisplayFor(modelItem => Model.FirstName)
        @Html.DisplayFor(modelItem => Model.LastName) <br />

        @Html.DisplayName("Email: ")
        @Html.DisplayFor(modelItem => Model.Email) <br />

        @Html.DisplayName("Phone: ")
        @Html.DisplayFor(modelItem => Model.Phone) <br />

        @Html.DisplayName("О себе: ")
        @Html.DisplayFor(modelItem => Model.Description)<br />

        @Html.DisplayName("Возраст: ")
        @Html.DisplayFor(modelItem => Model.Age)
        <div class="col">
            <a asp-action="GetReciprocity" asp-controller="Likes" asp-route-id=@Model.UserWhoLiked class="badge badge-info">Назад</a>
            <input type="hidden" name="UserWhoLiked" value=@Model.UserWhoLiked>
            <input type="hidden" name="UserBeingLiked" value=@Model.UserBeingLiked>
            <input type="submit" value="Убрать Лайк" />
        </div>
    </form>
</div>

